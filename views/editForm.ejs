    <center><h1 style="margin-top: 30px;">Edit Profile</h1></center>
    <center>
      <div style="height: 25px;
      width: 25px;
      background-color: black " 
      border-radius: 50%;
      display: inline-block;">
    </div>
  </center>

      <form class="container" method="POST" action="/usersProfiles/edit/<%=id%>" >
        <div class="form-group mb-3">
          <label for="formGroupExampleInput">Name</label>
          <input type="text" class="form-control" id="formGroupExampleInput" value="<%= data.name %>" name="name">
        </div>
        <div class="form-group mb-3">
          <label for="formGroupExampleInput2">E-mail</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" value="<%= data.email %>" name="email">
        </div>
        <div class="form-group mb-3">
          <label for="formGroupExampleInput2">Phone Number</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" value="<%= data.phone %>" name="phone">
        </div>
        <div class="form-group mb-3">
          <label for="formGroupExampleInput2">Profile Picture Url</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" value="<%= data.imageUrl %>" name="imageUrl">
        </div>

        <input type="submit" class="btn btn-primary" value="Save">
      </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

