<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>GenBoost! Gendong akunmu tiada batas!</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">GenBoost!</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/trainers">Trainers</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">About us</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logouts">Log out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <center><h1 style="margin-top: 50px;" >Our Trainers</h1></center>
    <div class="container" style="margin-top: 50px;">
      <% data.forEach( el => {%>

        <div class="card" style="margin-bottom: 50px;">
          <img src="https://media.suara.com/pictures/970x544/2020/09/30/18678-rrq-lemon-instagramikhsan-lemon.jpg" class="card-img-top" alt="<%= el.name %>">

          <div class="d-flex">

            <div class="card-body ms-4">
              <h5 class="card-title"><%= el.name %></h5>
              <p class="card-text mb-1"><strong>Rate :</strong> <%= el.fee %> / Rank</p>
              <% if(!el.Order) { %>
              <p class="card-text text-success" style="font-size: 30px;">Available</p>
              <% } else { %>
                <p class="card-text text-danger" style="font-size: 30px;">Unavailable</p>
              <% } %>
              <p class="card-text mb-0"><strong>Achievements :</strong></p>
              <p class="card-text"><%= el.description %></p>
            </div>

            <% if(el.Order){ %>

              <div class="card-body">
                <h5 class="card-title" style="margin-top: 30px;">Current trainee: </h5>
                <p class="card-text" style="font-size: 30px;"><%= el.Order.inGameId %></p>
              </div>
              
            <% } %>

          </div>

        </div>

      <% }) %>
      
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>